<div class="modal fade" tabindex="1" id="modal-form" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-form-title">Modal title</h3>

                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">
                <form id="function_form" class="form" action="#" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="MODE" name="MODE" />
                    <div class="fv-row row mb-5">
                        <label class="required fw-semibold fs-6 mt-3 col-md-3">Function ID</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <input type="text" class="form-control" id="ID" name="ID" placeholder="Function ID" />
                            </div>
                        </div>
                    </div>
                    <div class="fv-row row mb-5">
                        <label class="required fw-semibold fs-6 mt-3 col-md-3">Function Name</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <input type="text" class="form-control" id="NAME" name="NAME" placeholder="Function Name" />
                            </div>
                        </div>
                    </div>
                    <div class="fv-row row mb-5">
                        <label class="fw-semibold fs-6 mt-3 col-md-3">Description</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <input type="text" class="form-control" id="DESCRIPTION" name="DESCRIPTION" placeholder="Description" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="saveConfirmation()" class="btn btn-primary mx-5 w-125px">Save</button>
                <button type="button" onclick="onCancel()" class="btn btn-light w-125px" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>