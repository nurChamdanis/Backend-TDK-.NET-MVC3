<script>
    // Function for modal rotation history
    function showModalRotationHistory() {
        $("#modal-rotation-history").modal("show")
    }

    function closeModalRotationHistory() {
        $("#modal-rotation-history").modal("hide")
    }

    // Function for modal project assignment
    function showModalProjectAssignment() {
        $("#modal-project-assignment").modal("show")
    }

    function closeModalProjectAssignment() {
        $("#modal-project-assignment").modal("hide")
    }

    // Function for modal ICT
    function showModalICT() {
        $("#modal-ict").modal("show")
    }

    function closeModalICT() {
        $("#modal-ict").modal("hide")
    }

    function showCardModeEditableCareer(type) {
        $("#card-career-history").addClass('d-none')
        $("#card-project-assignment").addClass('d-none')
        $("#card-ict").addClass('d-none')
        $(`#change-mode-edit-${type}`).addClass('d-none')

        $(`#card-${type}`).removeClass('d-none')
        $(`#close-${type}`).removeClass('d-none')
        $(`#show-add-${type}`).removeClass('d-none')
        for (let i = 0; i < 2; i++) {
            $(`#show-edit-${type}-${i}`).removeClass('d-none')
        }
    }

    function closeCardModeEditableCareer(type) {
        $("#card-career-history").removeClass('d-none')
        $("#card-project-assignment").removeClass('d-none')
        $("#card-ict").removeClass('d-none')
        $(`#change-mode-edit-${type}`).removeClass('d-none')

        $(`#close-${type}`).addClass('d-none')
        $(`#show-add-${type}`).addClass('d-none')
        for (let i = 0; i < 2; i++) {
            $(`#show-edit-${type}-${i}`).addClass('d-none')
        }
    }
</script>